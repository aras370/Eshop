@model Product
@{
    ViewData["Title"] = "ShowProduct";
}
<div class="offset-1">
    <h3>@Model.Category.Name</h3>

    <div class="bg-light card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="/ProductsImages/@Model.ImageName" style="height:200px; width:180px;" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">قیمت: @Model.Price تومان</p>
                    <p class="card-text"><small class="text-muted">توضیحات: @Model.Description</small></p>
                    <p>
                        <a class="btn btn-success" asp-controller="Order" asp-action="AddToCart" asp-route-productId="@Model.ProductId">افزودن به سبد خرید</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
