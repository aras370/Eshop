@model DataLayer.RegisterViewModel

@{
    ViewData["Title"] = "ثبت نام";
    Layout = "LoginLayOut";
}

<div class="mt-3 container col-6 rounded-2 border border-2">

    <h2>ثبت نام</h2>

<pre>

</pre>
    <form method="post">

        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">نام کاربری:</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" id="inputEmail3">
            </div>
        </div>

        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">ایمیل:</label>
            <div class="col-sm-10">
                <input asp-for="Email" type="email" class="form-control" id="inputEmail3">
            </div>
        </div>

        <div class="row mb-3">
            <label for="inputPassword3" class="col-sm-2 col-form-label">کلمه عبور:</label>
            <div class="col-sm-10">
                <input asp-for="Password" type="password" class="form-control" id="inputPassword3">
            </div>
        </div>

        <div class="row mb-3">
            <label for="inputPassword3" class="col-sm-2 col-form-label"> تکرار کلمه عبور:</label>
            <div class="col-sm-10">
                <input asp-for="RePassword" type="password" class="form-control" id="inputPassword3">
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <pre>

    </pre>

        <button type="submit" class="btn btn-success mb-2">ثبت نام</button>
    </form>
  
</div>