@model EditUserPanelViewModel
@{
    ViewData["Title"] = "ویرایش اطلاعات کاربری";
}



<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="AvatarName" />
    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">نام کاربری:</label>
        <div class="col-sm-10">
            <label asp-for="Name">@Model.Name</label>
        </div>
    </div>


    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">ایمیل:</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" id="inputEmail3">
        </div>
    </div>

    <div class="row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">تصویر:</label>
        <img id="UserAvatar" style="height:200px;width:200px;" src="/UserAvatar/@Model.AvatarName" />
    </div>
    <pre>

    </pre>

    <div class="row">
        <label for="inputEmail3" class="col-md-2 col-form-label">انتخاب تصویر جدید:</label>

        <input id="EditUserAvatar" asp-for="UserAvatar" class="col-md-10" type="file" />
    </div>

    <pre>

    </pre>
    <button type="submit" class="btn btn-primary">ویرایش</button>
</form>
<pre></pre>

@section Scripts{
    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function(e) {
                    $('#UserAvatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#EditUserAvatar").change(function() {
            readURL(this);
        });
    </script>
        }