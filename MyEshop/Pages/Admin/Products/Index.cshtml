@page
@model MyEshop.Pages.Admin.Products.IndexModel
@{
}

<div class="container">


    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">لیست کالاها</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="col-md-12" style="margin: 10px 0;">
                        <a asp-page="Create" class="btn btn-success ">افزودن کالای جدید</a>
                        <p></p>
                        <table class="table table-striped table-bordered  dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>تصویر کالا</th>
                                    <th>نام کالا</th>
                                    <th>دسته بندی</th>
                                    <th>قیمت</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Products)
                                {
                                    <tr>
                                        <td>

                                            <img class="thumbnail" style="width:100px; height:100px;" src="/ProductsImages/@item.ImageName">
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.CategoryName</td>
                                        <td>
                                            @item.Price
                                        </td>

                                        <td>
                                            <a class="btn btn-warning" asp-page="Edit" asp-route-productId="@item.ProductId">ویرایش</a> |
                                            <a class="btn btn-danger" asp-page="Delete" asp-route-productId="@item.ProductId">حذف</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>