@page
@model MyEshop.Pages.Admin.Roles.CreateModel
@{
    ViewData["Title"] = "افزودن نقش";

    List<Permission> permissions = ViewData["Permissions"] as List<Permission>;
}



<div class="container">
    <div>
        <div class="col-lg-12 ">
            <h4 class="page-header">افزودن نقش</h4>
        </div>
        <hr />
        <!-- /.col-lg-12 -->
    </div>
    <form method="post" asp-page="Create">
        <div class="row container">
            <div class="col-5">
                <div class="panel panel-default">


                    <div class="form-group">

                        <label class="col-2 mb-3"> عنوان:</label>

                        <input  asp-for=Role.Name placeholder="عنوان نقش را وارد کنید" class="form-control" type="text">

                    </div>

                </div>
                <input type="submit" value="افزودن" class="btn btn-primary mt-3" />
            </div>


            <div class="col-md-4 ms-auto">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        دسترسی ها
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body mt-3">
                        <ul>
                            @foreach (var item in permissions)
                            {
                                <li>
                                    <input type="checkbox" name="SelectedPermission" value="@item.PermissionId">@item.PermissionTitle
                                </li>
                            }
                        </ul>
                       

                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>
    </form>
</div>